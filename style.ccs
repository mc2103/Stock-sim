body {
  font-family: Arial, sans-serif;
  padding: 20px;
  background: #fff;
}

button {
  margin: 5px;
  padding: 10px;
  font-weight: bold;
}

#chart {
  display: flex;
  align-items: flex-end;
  height: 200px;
  margin-top: 20px;
  border: 1px solid #ddd;
  padding: 10px;
  background: #f9f9f9;
  overflow-x: auto;
}

.candle {
  width: 10px;
  margin: 0 2px;
}
